<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Signup" >

    <EditText
        android:id="@+id/et_signup_user"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/signup_user"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/lightgray" />

    <EditText
        android:id="@+id/et_signup_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_pass"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/lightgray" />

    <EditText
        android:id="@+id/et_signup_cpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_cpass"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/lightgray" />

    <TextView
        android:id="@+id/tv_signup_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_terms"
        android:layout_marginTop="30dp"
        android:textColor="@color/stronggray"
        android:gravity="center"
        android:textColorLink="@color/stronggray" />

    <View android:layout_width="1dp" android:layout_height="25dp"/>

    <Button
        android:id="@+id/bn_signup_accept"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="4dp"
        android:text="@string/signup_join"
        android:background="@drawable/button_shape_blue"
        android:textColor="@color/white"
        android:gravity="center" />

</LinearLayout>