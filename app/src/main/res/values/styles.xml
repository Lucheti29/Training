<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="SignupActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/topbar_logo</item>
        <item name="android:actionBarStyle">@style/SignupActionBar</item>
        <item name="android:background">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/SignupActionBar</item>
    </style>

    <style name="SignupActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/SignupActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/SignupActionBarTitleText</item>
    </style>

    <style name="SignupActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonAbstractLogin">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="ButtonLogin" parent="ButtonAbstractLogin">
        <item name="android:text">@string/login_login</item>
        <item name="android:background">@drawable/button_shape_white</item>
    </style>

    <style name="ButtonSignup" parent="ButtonAbstractLogin">
        <item name="android:text">@string/login_signup</item>
        <item name="android:background">@drawable/button_shape_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
